
#!/bin/bash -e
set -o xtrace
TESTRUN_OUT=/tmp/testrun.log

sudo ip link add dummy0 type dummy

# Setup requirements
sudo apt-get update
sudo apt-get install openvswitch-common openvswitch-switch 

sudo /usr/share/openvswitch/scripts/ovs-ctl start
sleep 10 
sudo ovs-vsctl add-br br0
sleep 10
timeout 10 sudo ovs-vsctl add-port br0 dummy0
sleep 10
echo done here
